<MudDialog>
    <DialogContent>
        <MudAlert>При первом закрытии диалога коллекция по-прежнему отображается полностью. А если вызвать его повторно тогда норм. Почему?</MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton Color="MudBlazor.Color.Error" OnClick="Submit">Sumbit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public Update dlg { get; set; }

    protected override Task OnInitializedAsync()
    {

        return base.OnInitializedAsync();
    }

    private async Task Submit()
    {
        MudDialog.Close(DialogResult.Ok(dlg));
        //await dlg();
    }
}